<div class="spacer"></div>
<div class="lessonContainer" style="width: 700px; margin: 0 auto">

  <div style="width: 700px; height: 395px">
    <iframe width="100%" height="100%" src=<%= @lesson.video_link %> frameborder="0" allowfullscreen></iframe>
  </div>

<div id="lessonContentText">

  <span><% if @lesson.upvote_instances.where(user_id:current_user).length > 0 %>
    <button id="upvote" disabled>UPVOTED</button>
  <% else %>
    <button id="upvote"><a style="text-decoration: none" href="/upvote/<%= @lesson.id %>">UPVOTE</a></button>
  <% end %></span>

  <span style="font-size: 40px; font-weight: 700"><%= @lesson.title %></span>
    <% if current_user %>
      <p id="lessonEditUpdate"><% if @lesson.user_id == current_user.id || current_user.id == 1 %>
        <%= link_to 'Delete', lesson_path(@lesson), method: :delete %>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <%= link_to 'Edit', edit_lesson_path(@lesson) %>
      <% end %></p>
    <% end %>

  <span id="userName"><p><a href="/users/<%= @lesson.user_id %>">
    <div style="display: inline-block; padding: none; border: 1px solid black; background: white">
      <img src="<%= User.find(@lesson.user_id).avatar %>">
    </div> &nbsp;
      @<%= User.find(@lesson.user_id).handle %></a> &nbsp;&nbsp;|&nbsp;&nbsp;
      <span style="font-weight: 300"><%= time_ago_in_words(@lesson.created_at) %> ago</span>
  </p></span>
  <p  display= "block" id="lessonDescription"><%= @lesson.description %></p>
  <div id="lessonTags"><span>Tags:  &nbsp; </span> <%=raw tag_links(@lesson.all_tags) %></div>
  <br>
  <div class="comment_form" style="border: none">
    <% if current_user %>
      <%= form_for @comment do |f| %>
        <div class="field">
          <%= f.text_area :content, :autocomplete => :off,
          :placeholder => "You must be this tall to comment:"%><br>
          <%= f.hidden_field :lesson_id, :value => @lesson.id %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
          <class="actions"><%= f.submit :class => "affirmative" %></div>
      <% end %>
    <% end %>
  </div>
  <% @comments.each do |c| %>
      <div class="comment">
      <a href="/users/<%= c.user_id %>">
        <div style="display: inline-block; padding: 0; border: 1px solid black;
        width: 30px; height: 30px; margin: 0; background: white">
        <img style="height: 100%; width: 100%" src="<%= User.find(@lesson.user_id).avatar %>">
      </div> &nbsp;
      <span style="display: inline-block;" id="username">
        <%= User.find(c.user_id).handle %> &nbsp;&nbsp;|&nbsp;&nbsp;
      </span></a>
      <span style="font-weight: 300"><%= time_ago_in_words(c.created_at) %> ago</span>&nbsp;
      <% if current_user.id == c.user_id %>
        <%= link_to 'destroy', edit_comment_path(c) %>
      <% end %>
      <div id="content">
        <%= c.content %>
      </div>

    </div>
  <% end %>

</div>

