<div class="mainContainer lessonContainer" style="width: 700px; margin: 0 auto">
  <div style="width: 700px; height: 395px">
    <iframe width="100%" height="100%" src=<%= @lesson.video_link %> frameborder="0" allowfullscreen></iframe>
  </div>
  <span><%= @lesson.title %></span>
    <%= link_to 'Delete', lesson_path(@lesson), method: :delete %>
    <%= link_to 'Edit', edit_lesson_path(@lesson) %>
  <span>
  <% if @lesson.upvote_instances.where(user_id:current_user).length > 0 %>
    <button disabled>UPVOTED</button>
  <% else %>
    <button><a style="text-decoration: none" href="/upvote/<%= @lesson.id %>">UPVOTE</a></button>
  <% end %>
  </span>
  <div><%= @lesson.description %></div>
  <div><%=raw tag_links(@lesson.all_tags) %></div>

  <div class="comment_form">
    <%= form_for @comment do |f| %>
      <div class="field">
        <%= f.text_area :content, :autocomplete => :off, :placeholder => "Write things in here!" %>
        <%= f.hidden_field :lesson_id, :value => @lesson.id %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
      </div>
      <div class="actions"><%= f.submit :class => "affirmative" %></div>
    <% end %>
  </div>

  <% @comments.each do |c| %>
    <div class="comment">
      <div id="username">
        <%= User.find(c.user_id).name %>
      </div>

      <div id="time_created">
        <%= time_ago_in_words(c.created_at) %>
        ago
      </div>
      <br>

      <div id="content">
        <%= c.content %>
      </div>

      <div id="edit_comment">
        <%= link_to 'edit', edit_comment_path(c) %>
      </div>
      <br>


    </div>
  <% end %>
</div>


</div>
