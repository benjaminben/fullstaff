<div id="frontPageContainer">

<!-- <div style="display: inline-block; min-width: 200px; height: 100%"></div> -->

<div class="mainContainer frontPageColumn">
  <div class="spacer"></div>
  <div id="featuredContainer">
    <% if Lesson.last %>
      <iframe width="100%" height="100%" src=<%= Lesson.last.video_link %> frameborder="0" allowfullscreen></iframe>
    <% end %>
  </div>
  <div class="spacer"></div>
  <div id="thumbContainer">
    <div id="addLesson" class="vidContainer">
      <a href="lessons/new"><img src="https://i.imgur.com/KDmE7ri.png"></a>
    </div>
    <% @lessons.each do |vid| %>
      <div class="vidContainer">
        <a href="lessons/<%= vid.id %>"><div class="hoverCover"></div></a>
        <div class="vidEmbed">
          <iframe width="100%" height="50%" src=<%= vid.video_link %> frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="tagsCloud">
  <h4 id="tagsCloudHeader" style="font-weight: 300; margin: 20px auto;">Tags:</h4>
  <div id="tagsContainer">
    <% @tags.each do |t| %>
      <%= link_to t.name, tag_path(t.name) %>
    <% end %>
  </div>
</div>

<!-- <div style="display: inline-block; min-width: 175px; height: 100%;"></div> -->

<div id="adCloud">
  <img id="ad" src="https://i.imgur.com/6q1r233.png" style="opacity: .2">
</div>

<% tag_cloud Tag.counts, %w{css1 css2 css3 css4} do |tag, css_class| %>
  <%= link_to tag.name, tag_path(tag.name), class: css_class %>
<% end %>
