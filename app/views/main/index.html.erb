<div class="tags-cloud">
  <h4 id="tagsCloudHeader">Tags</h4>
  <% @tags.each do |t| %>
    <%= link_to t.name, tag_path(t.name) %>
  <% end %>
</div>
<div id="thumbContainer" class="mainContainer">
  <div id="addLesson" class="vidContainer">
    <a href="lessons/new"><img src="https://i.imgur.com/KDmE7ri.png"></a>
  </div>
  <% @lessons.each do |vid| %>
    <div class="vidContainer">
      <a href="lessons/<%= vid.id %>"><div class="hoverCover"></div></a>
      <div class="vidEmbed">
      <iframe width="100%" height="100%" src=<%= vid.video_link %> frameborder="0" allowfullscreen></iframe>      </div>
<!--       <button><a style="text-decoration: none" href="/upvote/<%= vid.id %>">UPVOTE</a></button>
 -->    </div>
  <% end %>

</div>

<% tag_cloud Tag.counts, %w{css1 css2 css3 css4} do |tag, css_class| %>
  <%= link_to tag.name, tag_path(tag.name), class: css_class %>
<% end %>
