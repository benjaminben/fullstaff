<div class="spacer"></div>
<div class="profContent">
  <div class="profHeaderBox">
    <img id="staffBrace" src="https://i.imgur.com/nK6UxVi.png">
    <div class="profPicBox"><img class="profPic" src="<%= @user.avatar %>">
    <%= form_for @user do |f| %>
      <%= f.submit %>
    </div>
    <div class="userInfoBox profEdit">
        <div>
          <%= f.label :name, class: 'profEdit' %>
          <%= f.text_field :name, class: 'profEdit profEditField1' %>
          <%= f.label :handle, class: 'profEdit' %>
          <%= f.text_field :handle, class: 'profEdit profEditField1' %>
        </div>
        <div>
          <%= f.label :Fields, class: 'profEdit'  %>
          <%= f.text_field :title, placeholder: "ex: Mastering Engineer | Songwriter", class: 'profEditField2' %>
        </div>
        <div>
          <%= f.label :contact, class: 'profEdit' %>
          <%= f.text_field :phone, class: 'profEdit profEditField2' %>
        </div>
        <div>
          <%= f.label :Image_url, class: 'profEdit' %>
          <%= f.text_field :avatar, class: 'profEdit profEditField2' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="spacer"></div>
  <div class="userContributions">
    <div class="userContHeader">Contributions:</div>
    <div class="userContContainer">
      <p style="text-decoration: underline; margin: 10px 0">Uploaded</p>
      <% @user.uploads.each do |vid| %>
        <div class="vidContainer">
        <a href="/lessons/<%= vid.id %>"><div class="hoverCover">
          <%= vid.title %>
        </div></a>
      <div class="vidEmbed">
      <iframe width="100%" height="100%" src=<%= vid.video_link %> frameborder="0" allowfullscreen></iframe>      </div>
      </div>
  <% end %>
    </div>
    <div class="userContContainer">
      <p style="text-decoration: underline; margin: 10px 0">Upvoted</p>
      <% @upvoted_by_user.each do |vid| %>
    <div class="vidContainer">
      <a href="/lessons/<%= vid.id %>"><div class="hoverCover">
        <%= vid.title %>
      </div></a>
      <div class="vidEmbed">
      <iframe width="100%" height="100%" src=<%= vid.video_link %> frameborder="0" allowfullscreen></iframe>      </div>
      </div>
  <% end %>
    </div>
    <div class="userContContainer">
      <p style="text-decoration: underline; margin: 10px 0">Commented</p>
      <% @commented.each do |vid| %>
    <div class="vidContainer">
      <a href="/lessons/<%= vid.id %>"><div class="hoverCover">
        <%= vid.title %>
      </div></a>
      <div class="vidEmbed">
      <iframe width="100%" height="100%" src=<%= vid.video_link %> frameborder="0" allowfullscreen></iframe>      </div>
      </div>
  <% end %>
    </div>
  </div>
</div>
